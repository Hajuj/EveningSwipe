<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DarkMode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Canteloupe</item>
        <item name="colorPrimaryVariant">@color/Pumpkin</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Hot_Chocolate</item>
        <item name="colorSecondaryVariant">@color/Hot_Chocolate</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bgc">@color/Hot_Chocolate</item>
        <item name="tc">@color/white</item>
        <item name="bgcInApp">@color/white</item>
        <item name="tcEdit">@color/black</item>
    </style>
</resources>