        <TextView
            android:id="@+id/movie10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_10"
            android:textSize="18dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/rate9" />
        <TextView
            android:id="@+id/rate10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie10"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/votes"
            android:textColor="@color/Hot_Chocolate"
            android:textSize="14dp"/>

        <Button
            android:id="@+id/refresh_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttons"
            android:text="@string/refresh_result"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refresh_ranking"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttons"
            android:text="@string/back_to_start"
            app:backgroundTint="@null" />

    </RelativeLayout>


</ScrollView>