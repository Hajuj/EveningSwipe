<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankingActivity"
    android:background="@color/Canteloupe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ranking_layout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ranking_ic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@mipmap/ic_widget"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/ranking_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ranking_ic"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="group's result: "
            android:textColor="@color/Hot_Chocolate"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ranking_group_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="1. "
            android:textColor="@color/Hot_Chocolate"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="2. "
            android:textColor="@color/Hot_Chocolate"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. "
            android:textSize="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:textStyle="bold"
            android:layout_below="@id/movie2"/>

        <TextView
            android:id="@+id/movie4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. "
            android:textSize="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/movie3"/>

        <TextView
            android:id="@+id/movie5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. "
            android:textSize="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/movie4"/>

        <TextView
            android:id="@+id/movie6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. "
            android:textSize="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/movie5"/>

        <TextView
            android:id="@+id/movie7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7. "
            android:textSize="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/movie6"/>

        <TextView
            android:id="@+id/movie8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8. "
            android:textSize="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/movie7"/>

        <TextView
            android:id="@+id/movie9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9. "
            android:textSize="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/movie8"/>

        <TextView
            android:id="@+id/movie10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10. "
            android:textSize="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/movie9"/>
    </RelativeLayout>


</ScrollView>