            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/rate5"/>
        <TextView
            android:id="@+id/rate6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie6"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/votes"
            android:textColor="@color/Hot_Chocolate"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/movie7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_7"
            android:textSize="18dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@id/rate6"/>
        <TextView
            android:id="@+id/rate7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie7"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/votes"
            android:textColor="@color/Hot_Chocolate"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/movie8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/__8"
            android:textSize="18dp"
