<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.filmswipe.SwipeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/Hot_Chocolate"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_swipe"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Movie Poster"
            android:layout_below="@+id/text_swipe" />


        <TextView
            android:id="@+id/title_description"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@+id/img_swipe"/>

        <TextView
            android:id="@+id/movie_text"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:textColor="@color/Hot_Chocolate"
            android:layout_below="@+id/title_description"
            android:justificationMode="inter_word"/>

        <ProgressBar
            android:id="@+id/pBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/hint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:background="@color/transparent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/got_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttons"
                android:text="Got it!"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/left_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="like"
                android:textSize="28sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="160dp"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/swipe_left_white"
                android:layout_below="@+id/left_hint"/>

            <TextView
                android:id="@+id/right_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dislike"
                android:textSize="28sp"
                android:layout_marginTop="160dp"
                android:gravity="right"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:src="@drawable/swipe_right_white"
                android:layout_below="@+id/right_hint"/>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
