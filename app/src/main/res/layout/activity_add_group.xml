<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroup">
<!--     android:background="?attr/bgcInApp"-->

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="357dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Please enter a name to create a new group"
        android:textSize="30dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />
<!-- android:textColor="?attr/tc" -->

    <EditText
        android:id="@+id/fullName"
        android:layout_width="319dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Name of group"
        android:inputType="text"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />
<!-- android:textColor="?attr/tcEdit"-->

    <Button
        android:id="@+id/saveGroup"
        android:layout_width="306dp"
        android:layout_height="49dp"
        android:background="@drawable/buttons"
        android:ems="20"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fullName"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/addGroupFinished"
        android:layout_width="400dp"
        android:layout_height="253dp"
        android:layout_centerHorizontal="true"
        android:ems="20"
        android:text="GROUP ADDED SUCCESSFULLY"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.567" />
    <!-- android:textColor="?attr/tc"-->

</androidx.constraintlayout.widget.ConstraintLayout>