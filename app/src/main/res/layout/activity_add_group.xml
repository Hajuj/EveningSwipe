<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgcInApp"
    tools:context=".AddGroup"
    android:id="@+id/add_group_layout">

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="357dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textColor="?attr/tc"
        android:hint="@string/textNewGroup"
        android:textSize="30dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="319dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/hintGroupName"
        android:inputType="text"
        android:textSize="30dp"
        android:textColor="?attr/tcEdit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <Button
        android:id="@+id/saveGroup"
        android:layout_width="306dp"
        android:layout_height="49dp"
        android:background="@drawable/buttons"
        android:ems="20"
        android:text="@string/saveGroupButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fullName"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/addGroupFinished"
        android:layout_width="400dp"
        android:layout_height="253dp"
        android:layout_centerHorizontal="true"
        android:ems="20"
        android:text="@string/addGroupFinished"
        android:textSize="50dp"
        android:textColor="?attr/tc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.567" />

</androidx.constraintlayout.widget.ConstraintLayout>