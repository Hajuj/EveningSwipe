<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.EveningSwipe.AppWidget.Container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.EveningSwipe.AppWidgetContainer"
    android:background="@drawable/app_widget_background">

    <ImageView
        android:id="@+id/appwidget_img"
        style="@style/Widget.EveningSwipe.AppWidget.InnerView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:background="@drawable/live_tv_white"
        android:layout_above="@+id/appwidget_text"
        />

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.EveningSwipe.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:contentDescription="The top three of 'groupname':\n\n1. 'moviename'\n2. 'moviename'\n3. 'moviename'"
        android:text="The top three of 'groupname':\n\n1. 'moviename'\n2. 'moviename'\n3. 'moviename'"
        android:textColor="@color/white"
        android:textSize="14dp" />
</RelativeLayout>