<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.EveningSwipe.AppWidget.Container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.EveningSwipe.AppWidgetContainer">

    <ImageView
        android:id="@+id/appwidget_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/live_tv_canteloupe"
        android:layout_above="@+id/appwidget_text"
        />

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.EveningSwipe.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textSize="14dp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        />
</RelativeLayout>