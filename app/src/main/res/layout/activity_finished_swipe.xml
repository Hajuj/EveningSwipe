<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishedSwipeActivity"
    android:background="@color/Canteloupe"
    android:id="@+id/finished_swipe_layout">

    <TextView
        android:id="@+id/finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fertig!"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Hot_Chocolate"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/finishedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Du hast alle ausgewÃ¤hlten Filem, welche einen Filtern entsprechen, gesehen. Sieh dir nun die Favortiten deiner Gruppe an."
        android:textSize="30dp"
        android:layout_below="@+id/finished"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Hot_Chocolate"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/mostSwiped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="20"
        android:text="Most Swiped"
        android:layout_below="@+id/finishedText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        app:backgroundTint="@null"/>


</RelativeLayout>